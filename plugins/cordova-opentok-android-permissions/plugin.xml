<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
xmlns:android="http://schemas.android.com/apk/res/android"
id="cordova-opentok-android-permissions"
    version="1.0.0">

    <name>Cordova Opentok/WebRTC Android Permissions</name>
    <description>This cordova plugin invokes permission for all the hardwares which require for a video chat</description>
    <license>Apache 2.0</license>
    <keywords>Opentok permissions, opentok openSSL, videochat android permissions, Camera android permission, Audio android permission</keywords>
    <repo>https://github.com/patwaswapnil/cordova-opentok-android-permissions.git</repo>

    <platform name="android">
        <config-file target="AndroidManifest.xml" parent="/*">
        <uses-permission android:name="android.permission.CAMERA" />
        <uses-permission android:name="android.permission.INTERNET" />
        <uses-permission android:name="android.permission.RECORD_AUDIO" />
        <uses-permission android:name="android.permission.WAKE_LOCK" />
        <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
        <uses-feature android:name="android.hardware.camera" android:required="true" />
        <uses-feature android:name="android.hardware.camera.autofocus" android:required="true" />
        </config-file>
     </platform>

</plugin>
